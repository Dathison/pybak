[metadata]
name = pybak
version = attr: pybak.VERSION
author = Dathison
description = Semi-automated backups with Restic.
long_desction = file: README.adoc
long_desction_content_type = text/asciidoc
package_url = https://github.com/Dathison/pybak
project_urls =
    Bug Tracker = https://github.com/Dathison/pybak/issues
classifiers =
    Programming Language :: Python :: 3
    Operating System :: Linux

[options]
package_dir =
    = src
packages = find:
python_requires = >=3.12

[options.packages.find]
where = src